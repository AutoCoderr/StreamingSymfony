<h1>Upload film</h1>
<table>
    <tr>
        <td>Titre :</td><td><input type="text" id="titre"/></td>
    </tr>
    <tr>
        <td>Duree :</td><td><input type="time" id="duree"/></td>
    </tr>
    <tr>
        <td>Synopsis :</td><td><textarea id="synopsis"></textarea></td>
    </tr>
    <tr>
        <td>Date de sortie:</td><td><input type="date" id="dateS"/></td>
    </tr>
    <tr>
        <td>l'image: </td><td><input type="file" id="imageFilmSelect"/></td>
    </tr>
    <tr>
        <td>Quelle saga : </td>
        <td>
            <select id="saga" onchange="sagaChoiced()">
                <option value="">Aucune</option>
                {% for saga in sagas %}
                    {% if saga.User.id == me.id %}
                        <option value="{{ saga.id }}">{{ saga.nom }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </td>
    </tr>
    <tr id="PrenomNomEtCategorie">
        <td colspan="2">
            <table>
                <tr>
                    <td>Prénom de l'auteur:</td><td><input type="text" id="prenomAuteur"/></td>
                </tr>
                <tr>
                    <td>Nom de l'auteur:</td><td><input type="text" id="nomAuteur"/></td>
                </tr>
                <tr>
                    <td>La catégorie:</td><td>
                        <select id="categorie">
                            <option value="">Choisissez</option>
                            {% for categorie in categories %}
                                <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>Les URLs : </td><td><textarea id="URLs"></textarea></td>
    </tr>
    <tr>
        <td colspan="2"><br/><center><input style="width: 150px;" type="button" value="Valider" onclick="uploadFilm()"/></center></td>
    </tr>
</table>